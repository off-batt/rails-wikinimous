<div class="header">
  <h1><%= @article.title %></h1>

  <div class='right btn btn-primary'>
    <%= link_to "<< List", articles_path %>
  </div>
</div>

<div class="content">
  <p><%= @article.content %></p>

  <div class='btn btn-secondary'>
    <%= link_to "Edit", edit_article_path %>
  </div>
  <div class='btn btn-danger'>
    <%= link_to "Delete", article_path(@article.id),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </div>
</div>
